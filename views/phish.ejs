      }

      h2,
      h4 {
        border-bottom: 2px solid #00ff00;
        padding-bottom: 5px;
      }

      /* Collapsible Sections */
      .collapsible {
        background-color: #0b121f;
        color: #00ff00;
        cursor: pointer;
        padding: 10px;
        width: 100%;
