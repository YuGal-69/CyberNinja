<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Achievements - CyberNinja</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">
  <!-- FontAwesome for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="css/style.css">
  <!-- Favicon -->
  <link rel="shortcut icon" href="images/logo.png" type="image/x-icon">
  <!-- JS Script (Corrected) -->
  <script src="js/script.js"></script>
</head>
<body style="background-color: #0b121f;" class="text-light">

  <!-- Header and Navbar -->
  <header class="header-wrapper">
    <nav class="navbar navbar-expand-lg p-0 m-0 fixed-top navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand ms-2" href="/index.ejs">
          <img
            src="images/logo.png"
            class="img-fluid"
            alt="CyberNinja Logo"
            style="max-width: 70px"
          /><span class="text-white">Cyber</span
          ><span class="text-danger">Ninja</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/view_profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/games">Games</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/setting">Settings</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="container mt-5 pt-5">
    <h2 class="text-center mt-4">Achievement</h2>
    <div class="row">
      <!-- Loop through achievements -->
      <% achievement.forEach(achievement => { %>
        <div class="col-md-4">
          <div class="card bg-dark text-light border-success mb-4">
            <div class="card-body text-center">
              <h5 class="card-title"><%= achievement.title %></h5>
              <p class="card-text"><%= achievement.description %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    
  </main>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 me-4">
    <div class="container">
      <p class="mb-0">&copy; 2024 CyberNinja. All Rights Reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
