<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - CyberNinja</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Google Fonts -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">
  <!-- FontAwesome for icons -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="<%= stylesheet %>">
  <link rel="stylesheet" href="/public/css/style.css">
  <!-- Custom Styles -->
  <style>
    
    /* Sidebar active link */
    .nav-link.active {
      background-color: #343a40;
      border-left: 4px solid #dc3545;
    }

    /* Hover effects for cards */
    .card:hover {
      transform: scale(1.05);
      transition: 0.3s;
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    /* Sidebar link hover effect */
    .nav-link:hover {
      background-color: #495057;
    }

    /* Smooth transitions */
    .nav-link, .btn, .card {
      transition: 0.3s ease-in-out;
    }
    
    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 5px;
    }

    ::-webkit-scrollbar-thumb {
      background: #495057;
    }

    ::-webkit-scrollbar-thumb:hover {
      background: #6c757d;
    }
    
    body {
            background-color: #0b121f;
            font-family: 'Montserrat', sans-serif;
        }
        .navbar-brand span {
            font-weight: bold;
        }
        .sidebar {
            height: 100vh;
        }
        .nav-link.active {
            background-color: #1c1f2e;
            border-radius: 8px;
            color: #fff;
        }
        .card {
            border-radius: 8px;
        }
        .card-body {
            background-color: #1c1f2e;
            color: #fff;
        }
        .card-header {
            background-color: #1c1f2e;
            color: #fff;
        }
        .btn-primary {
            background-color: #ff5722;
            border-color: #ff5722;
        }
        .dropdown-menu li a {
            color: grey;
        }
        .dropdown-menu li a:hover {
            color: white;
        }
  </style>
  <!-- Favicon -->
  <link rel="shortcut icon" href="<%= favicon %>" type="image/x-icon">
</head>
<body class="gaming-theme" style="background-color: #0b121f;">

  <!-- Header and Navbar -->
  <header class="header-wrapper">
    <nav class="navbar navbar-expand-lg p-0 m-0 fixed-top navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand ms-2" href="/project/index.html">
            <img src="<%= logo %>" class="img-fluid" alt="CyberNinja Logo" style="max-width: 70px"/>
            <span class="text-white">Cyber</span><span class="text-danger">Ninja</span>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/dashboard">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Features</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/pricing">Pricing</a>
            </li>
            <li class="nav-item dropdown me-2">
              <a class="nav-link dropdown-toggle" href="/profile" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Profile
              </a>
              <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <li><a class="dropdown-item" href="/settings">Settings</a></li>
                <li><a class="dropdown-item" href="/logout">Logout</a></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="container-fluid mt-5 pt-5">
    <div class="row">
      <!-- Sidebar -->
      <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-dark sidebar">
        <div class="position-sticky">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link" href="/dashboard">
                <i class="fas fa-home"></i>
                Dashboard
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profile">
                <i class="fas fa-user"></i>
                Profile
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/games">
                <i class="fas fa-gamepad"></i>
                Games
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/achievements">
                <i class="fas fa-trophy"></i>
                Achievements
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link active"/settings">
                <i class="fas fa-cogs"></i>
                Settings
              </a>
            </li>
          </ul>
        </div>
      </nav>

      <!-- Main Content Area -->
      <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <h2 class="mt-3 text-white">Settings</h2>
        <div class="row">
          <!-- Security Features -->
          <div class="col-md-6">
            <div class="card">
              <div class="card-header bg-dark text-white">
                Security Features
              </div>
              <div class="card-body bg-light">
                <ul class="list-group list-group-flush">
                  <li class="list-group-item" data-feature="encryption">
                    Data Encryption
                    <span class="badge bg-success toggle-feature">Enabled</span>
                  </li>
                  <li class="list-group-item" data-feature="2fa">
                    Two-Factor Authentication
                    <span class="badge bg-danger toggle-feature">Disabled</span>
                  </li>
                  <li class="list-group-item" data-feature="passwords">
                    Secure Passwords
                    <span class="badge bg-success toggle-feature">Enabled</span>
                  </li>
                  <li class="list-group-item" data-feature="firewall">
                    Firewall Protection
                    <span class="badge bg-success toggle-feature">Enabled</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <!-- User Management -->
          <div class="col-md-6">
            <div class="card">
              <div class="card-header bg-dark text-white">
                User Management
              </div>
              <div class="card-body bg-light">
                <p>Manage your user settings and preferences.</p>
                <button class="btn btn-primary mb-2">Manage Users</button>
                <button class="btn btn-secondary">Settings</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- JavaScript to Handle Interactions -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Handle feature toggle
      document.querySelectorAll('.toggle-feature').forEach(function(badge) {
        badge.addEventListener('click', function() {
          if (this.classList.contains('bg-success')) {
            this.classList.remove('bg-success');
            this.classList.add('bg-danger');
            this.textContent = 'Disabled';
          } else {
            this.classList.remove('bg-danger');
            this.classList.add('bg-success');
            this.textContent = 'Enabled';
          }
        });
      });

      // Add more settings dynamically
      const addSettingBtn = document.createElement('button');
      addSettingBtn.className = 'btn btn-success mt-3';
      addSettingBtn.textContent = 'Add More Settings';
      addSettingBtn.addEventListener('click', function() {
        const newSetting = document.createElement('li');
        newSetting.className = 'list-group-item';
        newSetting.textContent = 'New Security Feature';
        const badge = document.createElement('span');
        badge.className = 'badge bg-success toggle-feature';
        badge.textContent = 'Enabled';
        badge.addEventListener('click', function() {
          if (badge.classList.contains('bg-success')) {
            badge.classList.remove('bg-success');
            badge.classList.add('bg-danger');
            badge.textContent = 'Disabled';
          } else {
            badge.classList.remove('bg-danger');
            badge.classList.add('bg-success');
            badge.textContent = 'Enabled';
          }
        });
        newSetting.appendChild(badge);
        document.querySelector('.card-body ul').appendChild(newSetting);
      });

      document.querySelector('.card-body').appendChild(addSettingBtn);
    });
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/js/script.js"></script>
</body>
</html>
