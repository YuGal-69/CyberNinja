<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cybersecurity Modules</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="css/style.css" />
    <link rel="shortcut icon" href="images/logo.png" type="image/x-icon" />

    <style>
        body {
            background-color: #0b121f;
            font-family: "Montserrat", sans-serif;
        }
        .header {
            padding: 20px;
            background-color: #1c1f2e;
            color: #fff;
            text-align: center;
            margin-bottom: 20px;
            border-radius: 8px;
        }
        .card {
            background-color: #1c1f2e;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .card-header {
            background-color: #1c1f2e;
            color: #ff5722;
        }
        .card-body {
            color: #fff;
        }
    </style>
</head>
<body>
    <header class="header-wrapper">
        <nav class="navbar navbar-expand-lg p-0 m-0 fixed-top navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand ms-2" href="/">
                    <img src="images/logo.png" class="img-fluid" alt="CyberNinja Logo" style="max-width: 70px" />
                    <span class="text-white">Cyber</span>
                    <span class="text-danger">Ninja</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/modules">Modules</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/profile">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/leaderboards">Leaderboards</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container-fluid mt-5 pt-5">
        <div class="header">
            <h1>Learning Modules</h1>
            <p>Explore our diverse range of courses in cybersecurity.</p>
        </div>

        <div class="row">
            <!-- Fundamental Courses -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Fundamental Courses</div>
                    <div class="card-body">
                        <ul>
                            <% courses.fundamental.forEach(course => { %>
                                <li>
                                    <strong><%= course.title %>:</strong> <%= course.description %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Intermediate Courses -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Intermediate Courses</div>
                    <div class="card-body">
                        <ul>
                            <% courses.intermediate.forEach(course => { %>
                                <li>
                                    <strong><%= course.title %>:</strong> <%= course.description %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Advanced Courses -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Advanced Courses</div>
                    <div class="card-body">
                        <ul>
                            <% courses.advanced.forEach(course => { %>
                                <li>
                                    <strong><%= course.title %>:</strong> <%= course.description %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Specialized Courses -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Specialized Courses</div>
                    <div class="card-body">
                        <ul>
                            <% courses.specialized.forEach(course => { %>
                                <li>
                                    <strong><%= course.title %>:</strong> <%= course.description %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Skill Development and Certification Preparation -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Skill Development & Certification Prep</div>
                    <div class="card-body">
                        <ul>
                            <% courses.skillDevelopment.forEach(course => { %>
                                <li>
                                    <strong><%= course.title %>:</strong> <%= course.description %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Emerging Topics and Trends -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Emerging Topics & Trends</div>
                    <div class="card-body">
                        <ul>
                            <% courses.emerging.forEach(course => { %>
                                <li>
                                    <strong><%= course.title %>:</strong> <%= course.description %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Soft Skills and Professional Development -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Soft Skills & Professional Development</div>
                    <div class="card-body">
                        <ul>
                            <% courses.softSkills.forEach(course => { %>
                                <li>
                                    <strong><%= course.title %>:</strong> <%= course.description %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
</body>
</html>
